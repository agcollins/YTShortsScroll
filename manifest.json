{
  "manifest_version": 3,
  "name": "YTShortsScroll",
  "description": "Scrolls past finished YouTube shorts.",
  "version": "0.2.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "app_icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ],
      "run_at": "document_idle"
    }
  ]
}