{
  "manifest_version": 3,
  "name": "YTShortsScroll",
  "description": "Scrolls past finished YouTube shorts.",
  "version": "0.3.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "app_icon.png"
  },
  "permissions": [
    "webNavigation",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ],
      "run_at": "document_idle"
    }
  ]
}