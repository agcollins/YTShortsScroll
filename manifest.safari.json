{
  "manifest_version": 2,
  "name": "YTShortsScroll",
  "description": "Scrolls past finished YouTube shorts.",
  "version": "0.6.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "app_icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ],
      "run_at": "document_idle"
    }
  ]
}