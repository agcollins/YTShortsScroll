{
  "name": "ytshortsscroll",
  "version": "0.6.0",
  "description": "Scrolls past finished YouTube shorts.",
  "scripts": {
    "clean": "node scripts/clean.js",
    "build:ts": "webpack --mode production",
    "copy:chrome": "node scripts/copy-manifest.js chrome",
    "copy:firefox": "node scripts/copy-manifest.js firefox",
    "copy:safari": "node scripts/copy-manifest.js safari",
    "build:chrome": "run-s clean build:ts copy:chrome",
    "build:firefox": "run-s clean build:ts copy:firefox",
    "build:safari": "run-s clean build:ts copy:safari",
    "zip": "node scripts/zip.js",
    "package:chrome": "cross-env BROWSER=chrome run-s build:chrome zip",
    "package:firefox": "cross-env BROWSER=firefox run-s build:firefox zip",
    "package:safari": "cross-env BROWSER=safari run-s build:safari zip",
    "test": "jest"
  },
  "author": "Alexander Collins",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "adm-zip": "^0.5.15",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.2.6",
    "typescript": "^5.5.4",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1"
  }
}
